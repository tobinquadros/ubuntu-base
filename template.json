{
  "variables": {
    "atlas_token": "{{ env `ATLAS_TOKEN` }}",
    "atlas_username": "",
    "docker-image": "",
    "dist_upgrade": "false",
    "headless": "false",
    "hostname": "",
    "install_chef_client": "false",
    "iso_checksum": "",
    "iso_checksum_type": "",
    "iso_url": "",
    "ssh_username": "root",
    "sudo_password": ""
  },

  "push": {
      "name": "{{ user `atlas_username` }}/{{ user `hostname` }}",
      "base_dir": ".",
      "token": "{{ user `atlas_token` }}",
      "vcs": true
  },

  "builders": [
    {
      "type": "virtualbox-iso",
      "headless": "{{ user `headless` }}",
      "guest_os_type": "Ubuntu_64",
      "iso_url": "{{ user `iso_url` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "{{ user `iso_checksum_type` }}",
      "http_directory" : "preseeds",
      "http_port_min" : 8000,
      "http_port_max" : 8000,
      "hard_drive_interface": "sata",
      "iso_interface": "sata",
      "disk_size" : 8000,
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_key_path": "{{ pwd }}/preseeds/id_rsa",
      "ssh_wait_timeout": "60m",
      "shutdown_command": "echo {{ user `sudo_password` }} | sudo -S shutdown -P now",
      "vm_name": "{{ user `hostname` }}",
      "boot_command" : [
        "<esc><wait>",
        "<esc><wait>",
        "<enter><wait>",
        "/install/vmlinuz ",
        "acpi=off ",
        "auto=true ",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg ",
        "vga=normal fb=false ",
        "hostname={{ user `hostname` }} ",
        "initrd=/install/initrd.gz ",
        "-- ",
        "<enter><wait>"
      ]
    },
    {
      "type": "docker",
      "image": "{{ user `docker-image` }}",
      "export_path": "docker-images/{{ user `hostname` }}.tar"
    }
  ],

  "provisioners": [
    {
      "type": "shell",
      "only": ["virtualbox-iso"],
      "execute_command": "echo {{ user `sudo_password` }} | {{ .Vars }} sudo -E -S sh '{{ .Path }}'",
      "environment_vars": [
        "DIST_UPGRADE={{ user `dist_upgrade` }}",
        "INSTALL_CHEF_CLIENT={{ user `install_chef_client` }}"
      ],
      "scripts": [
        "scripts/dist_upgrade.sh",
        "scripts/setup_vagrant.sh",
        "scripts/chef.sh",
        "scripts/clean_up.sh",
        "scripts/setup_grub.sh",
        "scripts/compact.sh",
        "scripts/disable_root.sh"
      ]
    }
  ],

  "post-processors": [
    {
      "type": "vagrant",
      "only": ["virtualbox-iso"],
      "output": "vagrant-boxes/{{ user `hostname` }}-{{ .Provider }}.box"
    }
  ]
}
