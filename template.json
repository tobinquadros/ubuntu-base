{
  "variables": {
    "do-api-token": "DIGITALOCEAN_API_TOKEN",
    "headless": "false",
    "hostname": "ubuntu-1404",
    "iso_checksum": "83aabd8dcf1e8f469f3c72fff2375195",
    "iso_checksum_type": "md5",
    "iso_url": "http://releases.ubuntu.com/trusty/ubuntu-14.04.2-server-amd64.iso",
    "salt-bootstrap-options": "-N",
    "ssh_username": "root",
    "sudo_password": ""
  },

  "provisioners": [
    {
      "type": "shell",
      "script": "bootstrap.sh",
      "execute_command": "echo {{ user `sudo_password` }} | {{ .Vars }} sudo -E -S sh '{{ .Path }}'",
      "environment_vars": [
        "COMPACT=true",
        "DISABLE_ROOT=true",
        "INSTALL_SALT=true",
        "SALT_BOOTSTRAP_OPTIONS={{ user `salt-bootstrap-options` }}",
        "SETUP_GRUB=true",
        "SETUP_VAGRANT=true",
        "UPGRADE=true"
      ]
    }
  ],

  "post-processors": [
    {
      "type": "vagrant",
      "only": ["virtualbox-iso"]
    }
  ],

  "builders": [
    {
      "type": "virtualbox-iso",
      "headless": "{{ user `headless` }}",
      "guest_os_type": "Ubuntu_64",
      "iso_url": "{{ user `iso_url` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "{{ user `iso_checksum_type` }}",
      "http_directory" : "preseeds",
      "http_port_min" : 8000,
      "http_port_max" : 8000,
      "hard_drive_interface": "sata",
      "iso_interface": "sata",
      "disk_size" : 8000,
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_key_path": "{{ pwd }}/preseeds/id_rsa",
      "ssh_wait_timeout": "60m",
      "shutdown_command": "echo {{ user `sudo_password` }} | sudo -S shutdown -P now",
      "boot_command" : [
        "<esc><esc><enter><wait>",
        "/install/vmlinuz noapic ",
        "auto=true ",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg ",
        "vga=normal fb=false ",
        "hostname={{ user `hostname` }} ",
        "initrd=/install/initrd.gz -- <enter>"
      ]
    },
    {
      "type": "digitalocean",
      "api_token": "{{ user `do-api-token` }}",
      "size": "512mb",
      "region": "nyc3",
      "image": "ubuntu-14-04-x64"
    }
  ]
}
