{
  "variables": {
    "headless": "false",
    "hostname": "ubuntu-server-1404",
    "install_chef_client": "false",
    "install_salt": "false",
    "iso_checksum": "83aabd8dcf1e8f469f3c72fff2375195",
    "iso_checksum_type": "md5",
    "iso_url": "http://releases.ubuntu.com/trusty/ubuntu-14.04.2-server-amd64.iso",
    "salt_bootstrap_options": "-D",
    "ssh_username": "root",
    "sudo_password": ""
  },

  "push": {
      "name": "tobinquadros/ubuntu-base"
  },

  "builders": [
    {
      "type": "virtualbox-iso",
      "headless": "{{ user `headless` }}",
      "guest_os_type": "Ubuntu_64",
      "iso_url": "{{ user `iso_url` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "{{ user `iso_checksum_type` }}",
      "http_directory" : "preseeds",
      "http_port_min" : 8000,
      "http_port_max" : 8000,
      "hard_drive_interface": "sata",
      "iso_interface": "sata",
      "disk_size" : 8000,
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_key_path": "{{ pwd }}/preseeds/id_rsa",
      "ssh_wait_timeout": "60m",
      "shutdown_command": "echo {{ user `sudo_password` }} | sudo -S shutdown -P now",
      "boot_command" : [
        "<esc><esc><enter><wait>",
        "/install/vmlinuz noapic ",
        "auto=true ",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg ",
        "vga=normal fb=false ",
        "hostname={{ user `hostname` }} ",
        "initrd=/install/initrd.gz -- <enter>"
      ]
    },
    {
      "type": "docker",
      "image": "ubuntu:14.04",
      "commit": true
    }
  ],

  "provisioners": [
    {
      "type": "shell",
      "script": "bootstrap.sh",
      "execute_command": "echo {{ user `sudo_password` }} | {{ .Vars }} sudo -E -S sh '{{ .Path }}'",
      "environment_vars": [
        "COMPACT=false",
        "DISABLE_ROOT=false",
        "DIST_UPGRADE=false",
        "INSTALL_CHEF_CLIENT={{ user `install_chef_client` }}",
        "INSTALL_SALT={{ user `install_salt` }}",
        "SALT_BOOTSTRAP_OPTIONS={{ user `salt_bootstrap_options` }}",
        "SETUP_GRUB=false",
        "SETUP_VAGRANT=false"
      ],
      "override": {
        "virtualbox-iso": {
          "environment_vars": [
            "COMPACT=false",
            "DISABLE_ROOT=false",
            "DIST_UPGRADE=false",
            "INSTALL_CHEF_CLIENT={{ user `install_chef_client` }}",
            "INSTALL_SALT={{ user `install_salt` }}",
            "SALT_BOOTSTRAP_OPTIONS={{ user `salt_bootstrap_options` }}",
            "SETUP_GRUB=true",
            "SETUP_VAGRANT=true"
          ]
        }
      }
    }
  ],

  "post-processors": [
    {
      "type": "vagrant",
      "only": ["virtualbox-iso"]
    }
  ]
}
