{
  "description": "Creates and converges builds of Ubuntu for Vagrant, EC2, and Docker",

  "min_packer_version": "0.8.6",

  "variables": {
    "atlas_token": "",
    "atlas_username": "",
    "docker-image": "",
    "headless": "",
    "iso_checksum": "",
    "iso_checksum_type": "",
    "iso_url": "",
    "kernel_upgrade": "",
    "os_version": "",
    "preseed_file": "",
    "region": "",
    "source_ami": "",
    "subnet_id": "",
    "sudo_password": "",
    "vpc_id": ""
  },

  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command" : [
        "<enter><f6><esc>",
        "<bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs>",
        "<bs><bs><bs>",
        "/install/vmlinuz ",
        "acpi=off ",
        "auto=true ",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{ user `preseed_file` }} ",
        "vga=normal fb=false ",
        "hostname={{ user `os_version` }} ",
        "initrd=/install/initrd.gz ",
        "-- ",
        "<enter><wait>"
      ],
      "disk_size" : 8000,
      "guest_os_type": "Ubuntu_64",
      "hard_drive_interface": "sata",
      "headless": "{{ user `headless` }}",
      "http_directory" : "preseeds",
      "http_port_max" : 8000,
      "http_port_min" : 8000,
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "{{ user `iso_checksum_type` }}",
      "iso_interface": "sata",
      "iso_url": "{{ user `iso_url` }}",
      "shutdown_command": "echo {{ user `sudo_password` }} | sudo -S shutdown -P now",
      "ssh_private_key_file": "{{ pwd }}/preseeds/id_rsa",
      "ssh_username": "root",
      "ssh_wait_timeout": "60m",
      "vm_name": "{{ user `os_version` }}"
    },
    {
      "type": "docker",
      "export_path": "docker-images/{{ user `os_version` }}.tar",
      "image": "{{ user `docker-image` }}"
    },
    {
      "type": "amazon-ebs",
      "ami_description": "Ubuntu image custom built with Packer",
      "ami_name": "{{ user `os_version` }}-{{timestamp}}",
      "instance_type": "t2.nano",
      "region": "{{ user `region` }}",
      "run_tags": {
        "Name": "packer"
      },
      "source_ami": "{{ user `source_ami` }}",
      "ssh_username": "ubuntu",
      "subnet_id": "{{ user `subnet_id` }}",
      "vpc_id": "{{ user `vpc_id` }}"
    }
  ],

  "provisioners": [
    {
      "type": "shell",
      "only": ["virtualbox-iso", "amazon-ebs"],
      "execute_command": "echo {{ user `sudo_password` }} | {{ .Vars }} sudo -E -S sh '{{ .Path }}'",
      "environment_vars": [
        "KERNEL_UPGRADE={{ user `kernel_upgrade` }}"
      ],
      "scripts": [
        "provisioner_scripts/base_upgrades.sh",
        "provisioner_scripts/apt_clean_up.sh",
        "provisioner_scripts/prepare_vagrant_virtualbox.sh"
      ]
    },
    {
      "type": "shell",
      "only": ["docker"],
      "environment_vars": [
      ],
      "scripts": [
        "provisioner_scripts/base_upgrades.sh",
        "provisioner_scripts/apt_clean_up.sh"
      ]
    }
  ],

  "post-processors": [
    {
      "type": "vagrant",
      "only": ["virtualbox-iso"],
      "output": "vagrant-boxes/custom-ubuntu-virtualbox.box"
    }
  ],

  "push": {
      "base_dir": ".",
      "name": "{{ user `atlas_username` }}/{{ user `os_version` }}",
      "token": "{{ user `atlas_token` }}",
      "vcs": true
  }

}
